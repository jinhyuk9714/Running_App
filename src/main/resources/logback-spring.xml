<?xml version="1.0" encoding="UTF-8"?>
<!--
  Logback 설정 - 구조화된 로깅 (Structured Logging)

  프로파일별 설정:
  - default/local: 컬러 콘솔 출력 (개발용)
  - prod/docker: JSON 포맷 (ELK 연동용)

  MDC 필드:
  - requestId: 요청 추적 ID (UUID)
  - userId: 인증된 사용자 ID
  - clientIp: 클라이언트 IP
  - method: HTTP 메서드
  - uri: 요청 URI
-->
<configuration>
    <!-- Spring 프로파일 주입 -->
    <springProperty scope="context" name="APP_NAME" source="spring.application.name" defaultValue="running-app"/>

    <!-- ============================================================ -->
    <!-- 콘솔 출력 (개발 환경) - 컬러 포맷                              -->
    <!-- ============================================================ -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %highlight(%-5level) %cyan([%X{requestId:-}]) %magenta([%thread]) %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- ============================================================ -->
    <!-- JSON 출력 (프로덕션 환경) - ELK 연동                           -->
    <!-- ============================================================ -->
    <appender name="JSON" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <!-- 기본 필드 -->
            <includeMdcKeyName>requestId</includeMdcKeyName>
            <includeMdcKeyName>userId</includeMdcKeyName>
            <includeMdcKeyName>clientIp</includeMdcKeyName>
            <includeMdcKeyName>method</includeMdcKeyName>
            <includeMdcKeyName>uri</includeMdcKeyName>
            <includeMdcKeyName>duration</includeMdcKeyName>

            <!-- 커스텀 필드 -->
            <customFields>{"app":"${APP_NAME}","env":"${SPRING_PROFILES_ACTIVE:-local}"}</customFields>

            <!-- 타임스탬프 포맷 -->
            <timestampPattern>yyyy-MM-dd'T'HH:mm:ss.SSSZ</timestampPattern>

            <!-- 스택트레이스 최대 줄 수 -->
            <throwableConverter class="net.logstash.logback.stacktrace.ShortenedThrowableConverter">
                <maxDepthPerThrowable>30</maxDepthPerThrowable>
                <maxLength>2048</maxLength>
                <shortenedClassNameLength>20</shortenedClassNameLength>
                <rootCauseFirst>true</rootCauseFirst>
            </throwableConverter>
        </encoder>
    </appender>

    <!-- ============================================================ -->
    <!-- 파일 출력 (롤링) - 프로덕션 백업용                             -->
    <!-- ============================================================ -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/running-app.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/running-app.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <includeMdcKeyName>requestId</includeMdcKeyName>
            <includeMdcKeyName>userId</includeMdcKeyName>
            <includeMdcKeyName>clientIp</includeMdcKeyName>
        </encoder>
    </appender>

    <!-- ============================================================ -->
    <!-- 로거 레벨 설정                                                -->
    <!-- ============================================================ -->
    <!-- 애플리케이션 로거 -->
    <logger name="com.runningapp" level="INFO"/>

    <!-- SQL 로깅 (개발 시 DEBUG) -->
    <logger name="org.hibernate.SQL" level="WARN"/>
    <logger name="org.hibernate.type.descriptor.sql" level="WARN"/>

    <!-- Spring 프레임워크 -->
    <logger name="org.springframework" level="WARN"/>
    <logger name="org.springframework.web" level="INFO"/>

    <!-- ============================================================ -->
    <!-- 프로파일별 루트 로거 설정                                      -->
    <!-- ============================================================ -->

    <!-- 개발 환경: 컬러 콘솔 -->
    <springProfile name="default | local | test">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>

    <!-- 프로덕션 환경: JSON + 파일 -->
    <springProfile name="prod | docker">
        <root level="INFO">
            <appender-ref ref="JSON"/>
            <appender-ref ref="FILE"/>
        </root>
    </springProfile>
</configuration>
